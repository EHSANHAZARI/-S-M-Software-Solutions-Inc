@page "/Reset-Password-Confirmation"
@model ResetPasswordConfirmationModel
@{
    ViewData["Title"] = "Reset Password Confirmation";
}

<section class="slider-area">
    <div class="login-bg online-cv section-overly pt-100 pb-100 slider-height2 d-flex align-items-center">
        <div class="container">
            <div class="row">
                <div class="col-xl-12">
                    <div class="hero-cap text-center">
                        <h2>Password Reset Confirmation</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


<section class="call-to-action mt-50 mb-50">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-xl-6 col-lg-7 col-md-9 mx-auto">
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title" id="myModalLabel">@ViewData["Title"]</h4>
                    </div>
                    <div class="modal-body">
                        <div class="login-wrap">
                            <div class="col-md-8 mx-auto">
                                <p>
                                    Your Password Has Been Updated Successfully.
                                    <br />
                                    <a class="theme-btn btn-sm" asp-page="./Login"> Click Here To Login <i class="fas fa-sign-in-alt"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

